// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Gender {
  MALE
  FEMALE
}

enum CATEGORY {
  THREED_DESIGN
  GRAPHIC_DESIGN
  WEB_DEVELOPMENT
  SEO_MARKETING
  FINANCE_ACCOUNTING
  PERSONAL_DEVELOPMENT
  OFFICE_PRODUCTIVITY
  HR_MANAGEMENT
}

enum LEVELS {
  ALL_LEVELS
  BEGINNERS
  INTERMEDIATE
  EXPERT
}

enum FEATURES {
  ALL_CAPTION
  QUIZZES
  CODING_EXERCISES
  PRATICE_TEST
}

model User {
  id          String   @id @default(uuid())
  email       String   @unique
  password    String
  fullName    String
  nickName    String
  dateOfBirth DateTime
  phoneNumber String
  isVerified  Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  gender      Gender

  @@map("users")
}
// not migrated already
model Course {
  id         String   @id @default(uuid())
  courseName String
  category   CATEGORY
  mentor     String
  rating     String
  price      String
  LEVEL      LEVELS
  DURATION   String
  features   FEATURES
  description String
  bookmarked Boolean @default(false)
  
}
